<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.edu.gdmec.s07150808.bluetoothchat">
    <uses-sdk android:minSdkVersion="6"/>
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".BluetoothChat" android:label="@string/app_name" android:configChanges="orientation|keyboardHidden">


        <intent-filter>

        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>

    </intent-filter>

    </activity>

        <activity android:name=".DeviceListActivity" android:label="@string/select_device" android:configChanges="orientation|keyboardHidden" android:theme="@android:style/Theme.Dialog"/>
    </application>

</manifest>